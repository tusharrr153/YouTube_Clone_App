<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="5dp"
    tools:context=".YourVideosActivity">

    <include
        android:id="@+id/menu"
        layout="@layout/menu_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/yvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:textSize="27dp"
        android:text="Your Videos"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yvideo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/filter"
            android:background="@drawable/bgv"
            android:paddingTop="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            tools:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/bgv"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shorts"
            tools:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bgv"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            tools:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bgv"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/bg" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_400sdp"
        android:textColor="@color/white"
        android:text="Share your videos with anyone, or everyone" />

    <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:layout_below="@id/textView3"
        android:paddingBottom="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textColor="@color/black"
        android:background="@drawable/bgcreate"
        />
</RelativeLayout>
